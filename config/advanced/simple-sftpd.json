{
  "connection": {
    "bind_address": "0.0.0.0",
    "bind_port": 21,
    "max_connections": 200,
    "max_connections_per_ip": 20,
    "connection_timeout": 300,
    "data_timeout": 300,
    "idle_timeout": 600,
    "keep_alive": true,
    "keep_alive_interval": 60,
    "tcp_nodelay": true,
    "reuse_address": true,
    "backlog": 100
  },
  "ssl": {
    "enabled": true,
    "certificate_file": "/etc/simple-sftpd/ssl/server.crt",
    "private_key_file": "/etc/simple-sftpd/ssl/server.key",
    "ca_certificate_file": "/etc/simple-sftpd/ssl/ca.crt",
    "cipher_suite": "ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256",
    "require_client_cert": false,
    "verify_peer": true,
    "min_tls_version": 1.2,
    "max_tls_version": 1.3
  },
  "logging": {
    "log_file": "/var/log/simple-sftpd/simple-sftpd.log",
    "log_level": "DEBUG",
    "log_format": "EXTENDED",
    "log_to_console": true,
    "log_to_file": true
  },
  "security": {
    "chroot_enabled": true,
    "chroot_directory": "/var/ftp",
    "drop_privileges": true,
    "run_as_user": "ftp",
    "run_as_group": "ftp",
    "allow_anonymous": false,
    "allow_guest": false,
    "require_ssl": true,
    "allowed_commands": ["USER", "PASS", "QUIT", "PWD", "CWD", "LIST", "RETR", "STOR", "DELE", "MKD", "RMD"],
    "denied_commands": ["SITE", "SYST"],
    "max_login_attempts": 5,
    "login_timeout": 60,
    "session_timeout": 7200
  },
  "transfer": {
    "max_file_size": 1073741824,
    "max_transfer_rate": 10485760,
    "allow_overwrite": true,
    "allow_resume": true,
    "temp_directory": "/tmp/simple-sftpd",
    "buffer_size": 16384,
    "use_sendfile": true,
    "use_mmap": true,
    "allowed_extensions": ["txt", "pdf", "doc", "docx", "xls", "xlsx", "jpg", "png", "gif", "zip", "tar", "gz"],
    "denied_extensions": ["exe", "bat", "sh", "com", "dll"]
  },
  "passive": {
    "enabled": true,
    "external_ip": "",
    "local_ip": "",
    "min_port": 49152,
    "max_port": 65535,
    "use_external_ip": false,
    "use_local_ip": false
  },
  "rate_limit": {
    "enabled": true,
    "max_requests_per_minute": 300,
    "max_connections_per_minute": 50,
    "max_transfers_per_minute": 20,
    "max_bytes_per_minute": 104857600,
    "window_size": 60,
    "per_ip_limiting": true,
    "per_user_limiting": true
  }
}

