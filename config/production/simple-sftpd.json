{
  "connection": {
    "bind_address": "0.0.0.0",
    "bind_port": 21,
    "max_connections": 1000,
    "max_connections_per_ip": 50,
    "connection_timeout": 600,
    "data_timeout": 600,
    "idle_timeout": 1800,
    "keep_alive": true,
    "keep_alive_interval": 30,
    "keep_alive_probes": 5,
    "tcp_nodelay": true,
    "reuse_address": true,
    "backlog": 500
  },
  "ssl": {
    "enabled": true,
    "certificate_file": "/etc/simple-sftpd/ssl/server.crt",
    "private_key_file": "/etc/simple-sftpd/ssl/server.key",
    "ca_certificate_file": "/etc/simple-sftpd/ssl/ca.crt",
    "cipher_suite": "ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!MD5:!PSK:!SRP:!CAMELLIA",
    "require_client_cert": true,
    "verify_peer": true,
    "min_tls_version": 1.3,
    "max_tls_version": 1.3
  },
  "logging": {
    "log_file": "/var/log/simple-sftpd/simple-sftpd.log",
    "log_level": "INFO",
    "log_format": "JSON",
    "log_to_console": false,
    "log_to_file": true
  },
  "security": {
    "chroot_enabled": true,
    "chroot_directory": "/var/ftp",
    "drop_privileges": true,
    "run_as_user": "ftp",
    "run_as_group": "ftp",
    "allow_anonymous": false,
    "allow_guest": false,
    "require_ssl": true,
    "allowed_commands": ["USER", "PASS", "QUIT", "PWD", "CWD", "LIST", "RETR", "STOR", "DELE", "MKD", "RMD", "SIZE"],
    "denied_commands": ["SITE", "SYST", "HELP", "STAT"],
    "max_login_attempts": 3,
    "login_timeout": 30,
    "session_timeout": 3600
  },
  "transfer": {
    "max_file_size": 5368709120,
    "max_transfer_rate": 52428800,
    "allow_overwrite": false,
    "allow_resume": true,
    "temp_directory": "/var/tmp/simple-sftpd",
    "buffer_size": 32768,
    "use_sendfile": true,
    "use_mmap": true,
    "allowed_extensions": ["txt", "pdf", "doc", "docx", "xls", "xlsx", "ppt", "pptx", "jpg", "jpeg", "png", "gif", "zip", "tar", "gz", "bz2"],
    "denied_extensions": ["exe", "bat", "sh", "com", "dll", "scr", "vbs", "js"]
  },
  "passive": {
    "enabled": true,
    "external_ip": "",
    "local_ip": "",
    "min_port": 49152,
    "max_port": 65535,
    "use_external_ip": true,
    "use_local_ip": false
  },
  "rate_limit": {
    "enabled": true,
    "max_requests_per_minute": 1000,
    "max_connections_per_minute": 100,
    "max_transfers_per_minute": 50,
    "max_bytes_per_minute": 524288000,
    "window_size": 60,
    "per_ip_limiting": true,
    "per_user_limiting": true
  }
}

