#!/bin/bash
# Post-removal script for simple-sftpd

set -e

PROJECT_NAME="simple-sftpd"
CONFIG_DIR="/etc/$simple-sftpd"
LOG_DIR="/var/log/$simple-sftpd"

if [ "$1" = "purge" ]; then
    # Remove configuration files (optional - user may want to keep them)
    # Uncomment to remove config on purge:
    # rm -rf "$CONFIG_DIR"
    
    # Remove log files
    rm -rf "$LOG_DIR"
    
    # Remove service user (optional)
    # userdel sftpddev 2>/dev/null || true
fi

exit 0

